# Maintainer: SkorionOS Team
pkgname=steamdeck-gnome-presets
pkgver=1.0
pkgrel=1
pkgdesc="Portions of steamdeck-kde-presets reconfigured for use in GNOME"
arch=('any')
url="https://github.com/SkorionOS/skorionos"
license=('GPL2')
depends=('nautilus-python')
source=("steamos-add-to-steam.py")
md5sums=('24a09ae88f98ab120e3b5ea455e23c8c')

package() {
    # Create directories
    install -dm755 "$pkgdir/usr/share/nautilus-python/extensions"

    # Install nautilus python extension
    install -Dm644 "steamos-add-to-steam.py" \
        "$pkgdir/usr/share/nautilus-python/extensions/steamos-add-to-steam.py"
}
